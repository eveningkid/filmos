# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'filmos' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # TMDB API
  pod 'TMDBSwift'
  
  # Show placeholders for empty lists
  pod 'EmptyDataSet-Swift', '~> 4.2.0'

  # Youtube Player
  # pod 'YouTubePlayer', :git => 'https://github.com/gilesvangruisen/Swift-YouTube-Player.git'
  pod 'YoutubeKit'
  
  # Download/cache pictures from the web
  pod 'Kingfisher', '~> 4.0'
  
  # SQLite
  pod 'SQLite.swift', '~> 0.11.5'

  # Google Analytics
  pod 'GoogleAnalytics'
end
